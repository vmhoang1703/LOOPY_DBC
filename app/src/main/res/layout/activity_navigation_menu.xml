<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="416.74dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp">
        <RelativeLayout
            android:id="@+id/homeNavi"
            android:layout_width="73.43dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="33dp">
            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="10dp"
                android:layout_below="@+id/homeIcon"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cartNavi"
            android:layout_width="73.43dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/homeNavi"
            android:layout_marginLeft="19dp">
            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bag"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giỏ hàng"
                android:textSize="10dp"
                android:layout_below="@+id/cartIcon"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/orderNavi"
            android:layout_width="73.43dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cartNavi"
            android:layout_marginLeft="19dp">
            <ImageView
                android:id="@+id/orderIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/buy"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn hàng"
                android:textSize="10dp"
                android:layout_below="@+id/orderIcon"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profileNavi"
            android:layout_width="73.43dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/orderNavi"
            android:layout_marginLeft="19dp">
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá nhân"
                android:textSize="10dp"
                android:layout_below="@+id/profileIcon"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
