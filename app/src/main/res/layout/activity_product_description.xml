    <RelativeLayout
        android:id="@+id/totalPrice"
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67.5dp"
        android:layout_marginLeft="30dp">
        
        <TextView
            android:id="@+id/total"
            android:layout_width="53dp"
            android:layout_height="14dp"
            android:text="Tổng tiền"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="126dp"
            android:layout_height="24dp"
            android:layout_below="@+id/total"
            android:text="299.000"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-45dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/price"
            android:text="@string/currency"
            android:textStyle="bold"
            android:textSize="20dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/sellerAva"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="154dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:src="@drawable/ellipse32"/>
    
    <TextView
        android:id="@+id/sellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thùy Trang"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="141dp"
        android:textSize="10dp"
        android:textStyle="bold"/>
    
    <ImageView
        android:id="@+id/arrow_1"
        android:layout_width="88dp"
        android:layout_height="8dp"
        android:src="@drawable/arrow_1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="168dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"/>
    
    <TextView
        android:id="@+id/xem_trang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem trang"
        android:textColor="@color/green"
        android:lineSpacingExtra="2sp"
        android:layout_above="@+id/arrow_1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="99.5dp"
        android:layout_marginBottom="4dp"
        android:textSize="11dp"/>


    <RelativeLayout
        android:id="@+id/addToCartBtn"
        android:layout_width="214dp"
        android:layout_height="58dp"
        android:background="@drawable/addtocart_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60.5dp"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/totalPrice">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addToCartText"
            android:text="Thêm vào giỏ hàng"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/cartIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cart"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/addToCartText"
            android:layout_marginRight="-40dp"/>
    </RelativeLayout>



</RelativeLayout>


