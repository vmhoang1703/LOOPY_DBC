<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/productImg"
        android:layout_width="428dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_back_des">

        <RelativeLayout
            android:layout_width="428dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_back_des">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/leftarrow"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"/>
        </RelativeLayout>
        
        <ImageView
            android:layout_width="428dp"
            android:layout_height="150dp"
            android:src="@drawable/product_test"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detailedProduct"
        android:layout_width="404dp"
        android:layout_height="280dp"
        android:layout_below="@+id/productImg"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp">

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bàn phím cơ Dareu EK87"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/inboxIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/inbox"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7.25dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/heartIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/favorite"
            android:layout_marginTop="7.25dp"
            android:layout_toLeftOf="@+id/inboxIcon"
            android:layout_marginRight="18dp"/>

        <TextView
            android:id="@+id/line"
            android:layout_width="404dp"
            android:layout_height="1dp"
            android:background="@drawable/line"
            android:layout_below="@+id/productName"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/motaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="20dp"
            android:layout_below="@+id/line"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descriptionText"
            android:layout_below="@+id/motaText"
            android:layout_marginTop="8dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/damphangiaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đàm phán giá"
            android:textSize="20dp"
            android:layout_below="@+id/line"
            android:layout_marginTop="16dp"
            android:textColor="@color/green"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/countText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:textSize="20dp"
            android:layout_below="@+id/descriptionText"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/countText"
            android:text="1"
            android:textSize="20dp"
            android:layout_below="@+id/descriptionText"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/green"
            android:textStyle="bold"/>
    </RelativeLayout>

