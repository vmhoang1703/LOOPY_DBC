<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16000000">

    <RelativeLayout
        android:id="@+id/filterBg"
        android:layout_width="340dp"
        android:layout_height="511dp"
        android:background="@drawable/damphan_popup"
        android:layout_centerHorizontal="true">
        
        <ImageView
            android:id="@+id/successfulOrderImg"
            android:layout_width="185.93dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/successfulorder"/>

        <TextView
            android:id="@+id/thanhcong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt hàng thành công!"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/successfulOrderImg"
            android:layout_marginTop="32dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@id/thanhcong2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã đặt hàng thành công"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/thanhcong1"
            android:layout_marginTop="16dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/damphanBtn"
            android:layout_width="276dp"
            android:layout_height="58dp"
            android:background="@drawable/shadowbtn_grren"
            android:elevation="5dp"
            android:text="Xem đơn hàng của bạn"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/thanhcong2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/resetBtn"
            android:layout_width="276dp"
            android:layout_height="58dp"
            android:layout_below="@+id/damphanBtn"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadowbtn"
            android:elevation="5dp"
            android:gravity="center"
            android:text="Xem biên nhận"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>