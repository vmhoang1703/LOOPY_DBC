<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForumActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/back"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOOPY forum"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/community"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/edittext_bg">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="47dp"
                        android:layout_height="36dp"
                        android:src="@drawable/logo"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:src="@drawable/search1"
                        android:layout_toRightOf="@+id/logo"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/bee"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:src="@drawable/bee"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16.58dp"/>

                    <ImageView
                        android:id="@+id/noti_forum"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/noti_forum"
                        android:layout_toLeftOf="@id/bee"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"/>
                    
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/chat"
                        android:layout_toLeftOf="@id/noti_forum"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/forum_options_bar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/forum_bg"
                    android:layout_below="@+id/header"
                    android:layout_marginTop="10.94dp">
                    
                    <ImageView
                        android:id="@+id/newest_forum"
                        android:layout_width="83dp"
                        android:layout_height="40dp"
                        android:src="@drawable/newest_forum"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26.5dp"/>

                    <ImageView
                        android:id="@+id/common_forum"
                        android:layout_width="83dp"
                        android:layout_height="40dp"
                        android:src="@drawable/common_forum"
                        android:layout_toRightOf="@+id/newest_forum"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"/>

                    <ImageView
                        android:id="@+id/follow_forum"
                        android:layout_width="121dp"
                        android:layout_height="40dp"
                        android:src="@drawable/follow_forum"
                        android:layout_toRightOf="@+id/common_forum"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/uppost"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:background="@drawable/forum_bg"
                    android:layout_below="@+id/forum_options_bar"
                    android:layout_marginTop="28dp">
                    
                    <RelativeLayout
                        android:id="@+id/avatar"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="@drawable/ava1_bg"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.51dp">

                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ava1" />
                    </RelativeLayout>

                    <EditText
                        android:layout_width="193dp"
                        android:layout_height="58dp"
                        android:background="@drawable/black_bg"
                        android:layout_toRightOf="@id/avatar"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="11.08dp"
                        android:hint="Hãy cùng chia sẻ những gì đang diễn ra..."
                        android:textColorHint="@color/forum_text"
                        android:paddingLeft="11.08dp"
                        android:textSize="13dp"/>

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/post_img"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15.51dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/post1"
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:layout_below="@+id/uppost"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/forum_bg">
                    
                    <ImageView
                        android:id="@+id/postImage"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:src="@drawable/post_image"
                        android:layout_marginTop="15.4dp"
                        android:layout_marginLeft="15.4dp"/>

                    <TextView
                        android:id="@+id/postContent"
                        android:layout_width="205dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/postImage"
                        android:layout_marginLeft="15.4dp"
                        android:layout_marginTop="15.4dp"
                        android:text="Nông nghiệp đang bước vào thời kỳ khủng khoảng"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kinh tế"
                        android:background="@drawable/tag_bg"
                        android:textSize="15dp"
                        android:paddingLeft="11dp"
                        android:paddingRight="11dp"
                        android:paddingTop="4.4dp"
                        android:paddingBottom="4.4dp"
                        android:layout_below="@+id/postContent"
                        android:layout_toRightOf="@+id/postImage"
                        android:layout_marginLeft="15.4dp"
                        android:layout_marginTop="11dp"
                        android:textColor="@color/forum_text"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/post2"
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:background="@drawable/forum_bg"
                    android:layout_below="@+id/post1"
                    android:layout_marginTop="28dp">


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/post3"
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:background="@drawable/forum_bg"
                    android:layout_below="@+id/post2"
                    android:layout_marginTop="28dp">


                </RelativeLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>