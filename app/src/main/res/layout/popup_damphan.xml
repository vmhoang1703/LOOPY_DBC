<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/damphan_popup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/damphanBox"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp">
            <TextView
                android:id="@+id/giahientaiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá hiện tại:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:id="@+id/currentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="299.000"
                android:layout_toRightOf="@+id/giahientaiText"
                android:layout_marginLeft="42dp"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency"
                android:layout_toRightOf="@+id/currentPrice"
                android:layout_marginLeft="2dp"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/giadamphanText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá đàm phán:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_below="@+id/giahientaiText"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="30dp"/>
            <EditText
                android:id="@+id/damphanEditText"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_back_des"
                android:layout_below="@+id/giadamphanText"
                android:hint="Mời nhập giá đàm phán"
                android:textSize="16dp"
                android:layout_marginTop="29dp"
                android:paddingLeft="18.72dp"
                android:layout_marginLeft="30dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/noteText"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/damphanBox"
            android:text="*Lưu ý: Giá đàm phán không được nhỏ hơn 1/2 so với giá hiện tại của sản phẩm"
            android:layout_marginTop="17dp"
            android:textSize="16dp"
            android:textColor="@color/green"/>

        <TextView
            android:id="@+id/damphanBtn"
            android:layout_width="270dp"
            android:layout_height="58dp"
            android:background="@drawable/shadowbtn_grren"
            android:elevation="5dp"
            android:text="Đàm phán"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/noteText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/resetBtn"
            android:layout_width="300dp"
            android:layout_height="58dp"
            android:layout_below="@+id/damphanBtn"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadowbtn"
            android:elevation="5dp"
            android:gravity="center"
            android:text="Đặt lại"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</RelativeLayout>