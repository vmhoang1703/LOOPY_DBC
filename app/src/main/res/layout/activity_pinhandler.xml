<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/back"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập mã PIN"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"
                android:layout_marginLeft="16dp" />
        </RelativeLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập mã PIN để xác nhận thanh toán"
            android:layout_above="@+id/typePINBox"
            android:textSize="20dp"
            android:layout_marginBottom="80dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/typePINBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/pinDigit1"
                android:layout_width="83dp"
                android:layout_height="61dp"
                android:background="@drawable/bg_pin"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/pinDigit2"
                android:layout_width="83dp"
                android:layout_height="61dp"
                android:background="@drawable/bg_pin"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/pinDigit3"
                android:layout_width="83dp"
                android:layout_height="61dp"
                android:background="@drawable/bg_pin"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/pinDigit4"
                android:layout_width="83dp"
                android:layout_height="61dp"
                android:background="@drawable/bg_pin"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/continueBtn"
            android:layout_width="196dp"
            android:layout_height="58dp"
            android:background="@drawable/addtocart_btn"
            android:layout_below="@+id/typePINBox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="128dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiếp tục"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:elevation="3dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>