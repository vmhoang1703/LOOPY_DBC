<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_back_des">
        <ImageView
            android:id="@+id/productImg"
            android:src="@drawable/product_test"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>

        <RelativeLayout
            android:layout_width="224dp"
            android:layout_height="116dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/productImg"
            android:layout_marginLeft="20dp">
            
            <TextView
                android:id="@+id/productName"
                android:text="Bàn phím cơ EK87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/quantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng:"
                android:textSize="12dp"
                android:layout_below="@+id/productName"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/quantityNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/quantityText"
                android:layout_marginLeft="1dp"
                android:layout_below="@+id/productName"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/orderStatus"
                android:layout_width="102dp"
                android:layout_height="24dp"
                android:text="Đang vận chuyển"
                android:background="@drawable/bg_status_order"
                android:layout_below="@+id/quantityText"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="#acb857"
                android:layout_marginTop="8dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderStatus"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="299.000"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#ed8304"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currency"
                    android:textStyle="bold"
                    android:textColor="#ed8304"
                    android:layout_toRightOf="@+id/productPrice"
                    android:textSize="22dp"
                    android:layout_marginLeft="1dp"/>
                <RelativeLayout
                    android:id="@+id/followBtn"
                    android:layout_width="78dp"
                    android:layout_height="32dp"
                    android:background="@drawable/addtocart_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/paymentText"
                        android:text="Theo dõi"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
